<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ResistorValues"
             x:Class="ResistorValues.MainPage">

    <StackLayout>
        
        <!-- Place new controls here -->
        <Button Text="{Binding BandOne, Mode=TwoWay}"
                Command="{Binding BandOneCommand}"/>
        <Button Text="{Binding BandTwo, Mode=TwoWay}"
                Command="{Binding BandTwoCommand}"/>
        <Button Text="{Binding Multiplier, Mode=TwoWay}"
                Command="{Binding MultiplierCommand}"/>

    </StackLayout>

</ContentPage>
